<div class="wrapper tweet_wrapper">

  <div class="input">
    <%= form_for @input_content do |f| %>
      <div class="form-group">
        <%= f.label :content %><br/>
        <%= f.text_area :content, class: 'form-control', row: 3 %>
      </div>
      <div class="actions clearfix">
          
        <div class="alert">
          <% if flash[:alert] %>
            <% flash[:alert].each do |message| %>
              <p class="alert"><%= message %></p>
            <% end %>
          <% end %>
        </div>
          
        <div class="post">
          <%= f.submit 'Post', class: 'btn btn-primary' %>
        </div>
      </div>
    <% end %>
  </div>
  
  <div class="tweet">
    <% @tweet.each do |t| %>
      <div class="per">
        <p class="icon">
          <% if t.user.thumbnail? %>
              <%= image_tag t.user.thumbnail.url %>
          <% else %>
              NO IMAGE
          <% end %>
        </p>
        <p class="message">
          <%= t.message %>
        </p>
      </div>
    <% end %>
  </div>
  
</div>